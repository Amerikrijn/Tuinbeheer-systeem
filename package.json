{
  "name": "tuinbeheer-systeem",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "complexity:check": "ts-complexity --max-cyclomatic 8 --max-cognitive 12 --max-maintainability 85",
    "type:check": "tsc --noEmit",
    "security:scan": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "quality:check": "npm run lint && npm run complexity:check && npm run type:check",
    "quality:fix": "npm run lint:fix && npm run security:fix",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "local:test": "npm run quality:check && npm run test:coverage && npm run build && npm run security:scan",
    "local:fix": "npm run lint:fix && npm run test:fix && npm run build:fix",
    "quality:gate": "npm run local:test && echo 'âœ… Quality gates passed - ready for pipeline'",
    "test:fix": "echo 'ðŸ”§ Auto-fixing test issues...' && npm run test:coverage || echo 'Tests need manual fixing'",
    "build:fix": "echo 'ðŸ”§ Auto-fixing build issues...' && npm run build || echo 'Build needs manual fixing'",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "clean": "rm -rf .next && rm -rf node_modules/.cache && rm -rf coverage",
    "audit:security": "npm audit --audit-level moderate",
    "db:setup": "node database/setup.js setup --seed",
    "db:reset": "node database/setup.js reset",
    "db:schema": "node database/setup.js setup",
    "db:exec-sql": "node scripts/run-sql-file.js",
    "db:fix:search-path": "node scripts/run-sql-file.js /workspace/fix-lint-0011-set-search-path.sql",
    "mobile:setup": "cd apps/mobile && npm install",
    "mobile:start": "cd apps/mobile && npm start",
    "mobile:android": "cd apps/mobile && npm run android",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "shared:build": "cd packages/shared && npm install && npm run build",
    "deploy:check": "./scripts/auto-deploy-safety.sh",
    "deploy:test": "node scripts/auto-test-loops.js",
    "deploy:production": "npm run deploy:check && npm run deploy:test && echo 'Ready for production deployment'",
    "security:foundation": "echo 'Run security-implementation/scripts/01-foundation-security.sql in Supabase'",
    "security:test": "echo 'Run security-implementation/tests/test-01-foundation.sql in Supabase'",
    "security:implement-phase1": "node implement-security-phase1.js",
    "security:implement-phase1-force": "node implement-security-phase1.js --force",
    "banking:compliance": "npm run deploy:check && npm run deploy:test",
    "banking:full-check": "npm run type-check && npm run lint:fix && npm run test:ci && npm run banking:compliance"
  },
