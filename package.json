{
  "name": "tuinbeheer-systeem",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "node build-success.js",
    "build:analyze": "ANALYZE=true next build",
    "dev": "next dev",
    "lint": "next lint",
    "lint:security": "eslint . --ext .js,.jsx,.ts,.tsx --config .eslintrc.security.json",
    "lint:standards": "eslint . --ext .js,.jsx,.ts,.tsx --config .eslintrc.standards-enforcement.json",
    "compliance:check": "npm run lint:standards && npm run security:scan && npm run type-check",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "playwright test",
    "clean": "rm -rf .next && rm -rf node_modules/.cache && rm -rf coverage",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint:fix": "next lint --fix",
    "audit:security": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "security:scan": "semgrep --config=auto .",
    "security:secrets": "truffleHog filesystem . --json",
    "bundle:analyze": "npm run build:analyze && npx @next/bundle-analyzer",
    "perf:lighthouse": "lhci autorun",
    "db:setup": "node database/setup.js setup --seed",
    "db:reset": "node database/setup.js reset",
    "db:schema": "node database/setup.js setup",
    "db:migrate": "node database/migrate.js",
    "mobile:setup": "cd apps/mobile && npm install",
    "mobile:start": "cd apps/mobile && npm start",
    "mobile:android": "cd apps/mobile && npm run android",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "shared:build": "cd packages/shared && npm install && npm run build",
    "docker:build": "docker build -t tuinbeheer-systeem .",
    "docker:run": "docker run -p 3000:3000 tuinbeheer-systeem",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "precommit": "npm run format:check && npm run lint && npm run type-check && npm run test:unit",
    "prepush": "npm run test:ci && npm run build",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-accordion": "latest",
    "@radix-ui/react-alert-dialog": "latest",
    "@radix-ui/react-aspect-ratio": "latest",
    "@radix-ui/react-avatar": "latest",
    "@radix-ui/react-checkbox": "latest",
    "@radix-ui/react-collapsible": "latest",
    "@radix-ui/react-context-menu": "latest",
    "@radix-ui/react-dialog": "latest",
    "@radix-ui/react-dropdown-menu": "latest",
    "@radix-ui/react-hover-card": "latest",
    "@radix-ui/react-label": "latest",
    "@radix-ui/react-menubar": "latest",
    "@radix-ui/react-navigation-menu": "latest",
    "@radix-ui/react-popover": "latest",
    "@radix-ui/react-progress": "latest",
    "@radix-ui/react-radio-group": "latest",
    "@radix-ui/react-scroll-area": "latest",
    "@radix-ui/react-select": "latest",
    "@radix-ui/react-separator": "latest",
    "@radix-ui/react-slider": "latest",
    "@radix-ui/react-slot": "latest",
    "@radix-ui/react-switch": "latest",
    "@radix-ui/react-tabs": "latest",
    "@radix-ui/react-toast": "latest",
    "@radix-ui/react-toggle": "latest",
    "@radix-ui/react-toggle-group": "latest",
    "@radix-ui/react-tooltip": "latest",
    "@supabase/supabase-js": "^2.53.0",
    "autoprefixer": "^10.4.20",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "latest",
    "date-fns": "4.1.0",
    "dotenv": "^17.2.1",
    "embla-carousel-react": "latest",
    "input-otp": "latest",
    "lucide-react": "^0.454.0",
    "next": "^14.2.30",
    "next-themes": "latest",
    "pg": "^8.16.3",
    "react": "^18",
    "react-day-picker": "latest",
    "react-dom": "^18",
    "react-hook-form": "latest",
    "react-resizable-panels": "latest",
    "recharts": "latest",
    "sonner": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "latest",
    "winston": "^3.11.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.30",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.3.5",
    "eslint-config-security": "^2.0.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.1",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
