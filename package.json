{
  "name": "tuinbeheer-systeem",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "node build-success.js",
    "dev": "next dev",
    "dev:stable": "node scripts/dev-server.js",
    "dev:clean": "rm -rf .next && rm -rf node_modules/.cache && npm run dev",
    "lint": "eslint .",
    "start": "next start",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:regression": "npm run test:ci && npm run test:integration",
    "test:security": "npm run audit:security && npm run test:security:patterns",
    "test:security:patterns": "node scripts/security-pattern-check.js",
    "test:e2e": "npm run build && npm run test:ci",
    "test:all": "npm run test:ci && npm run test:regression && npm run test:security",
    "test:workflow": "node scripts/test-workflow.js",
    "test:workflow:e2e": "npm run test:workflow && npm run test:e2e",
    "clean": "rm -rf .next && rm -rf node_modules/.cache && rm -rf coverage",
    "format": "prettier --check .",
    "prepare": "husky install",
    "lint:fix": "next lint --fix",
    "audit:security": "npm audit --audit-level moderate",
    "db:setup": "node database/setup.js setup --seed",
    "db:reset": "node database/setup.js reset",
    "db:schema": "node database/setup.js setup",
    "db:exec-sql": "node scripts/run-sql-file.js",
    "db:fix:search-path": "node scripts/run-sql-file.js /workspace/fix-lint-0011-set-search-path.sql",
    "mobile:setup": "cd apps/mobile && npm install",
    "mobile:start": "cd apps/mobile && npm start",
    "mobile:android": "cd apps/mobile && npm run android",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "shared:build": "cd packages/shared && npm install && npm run build",
    "deploy:check": "./scripts/auto-deploy-safety.sh",
    "deploy:test": "node scripts/auto-test-loop.js",
    "auto-test-loop": "node scripts/auto-test-loop.js",
    "deploy:production": "npm run deploy:check && npm run deploy:test && echo 'Ready for production deployment'",
    "security:foundation": "echo 'Run security-implementation/scripts/01-foundation-security.sql in Supabase'",
    "security:test": "echo 'Run security-implementation/tests/test-01-foundation.sql in Supabase'",
    "security:implement-phase1": "node implement-security-phase1.js",
    "security:implement-phase1-force": "node implement-security-phase1.js --force",
    "banking:compliance": "npm run deploy:check && npm run deploy:test",
    "banking:full-check": "npm run typecheck && npm run lint:fix && npm run test:ci && npm run banking:compliance",
    "ci:quality": "npm run lint && npm run typecheck && npm run test:ci",
    "ci:security": "npm run audit:security && npm run test:security:patterns",
    "ci:regression": "npm run test:regression",
    "ci:build": "npm run build",
    "ci:all": "npm run ci:quality && npm run ci:security && npm run ci:regression && npm run ci:build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format:write": "prettier --write .",
    "coverage": "vitest run --coverage",
    "deadcode:exports": "echo 'ts-prune not available'",
    "deadcode:deps": "echo 'depcheck not available'"
  },
