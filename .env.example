# ========================================
# VISUAL GARDEN SYSTEM - ENVIRONMENT VARIABLES
# ========================================
# Banking-grade configuration with comprehensive timeout and security settings
# Copy this file to .env.local and fill in your values
# ========================================

# ========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ========================================
# Production: Set in Vercel environment variables
# Development: Must be set in .env.local

# Supabase - Public (safe in browser)
NEXT_PUBLIC_SUPABASE_URL=https://dwsgwqosmihsfaxuheji.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Supabase - Private (SERVER-SIDE ONLY!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ========================================
# DATABASE TIMEOUT CONFIGURATION (OPTIONAL)
# ========================================
# All timeout values are in milliseconds
# These can be adjusted based on your database performance requirements

# Connection timeout - how long to wait for initial database connection
DB_CONNECTION_TIMEOUT=30000

# Query timeout - how long to wait for complex database queries (pagination, filters, etc.)
DB_QUERY_TIMEOUT=45000

# Simple operation timeout - how long to wait for simple CRUD operations
DB_SIMPLE_TIMEOUT=30000

# Authentication timeout - how long to wait for auth operations
DB_AUTH_TIMEOUT=15000

# ========================================
# DATABASE RETRY CONFIGURATION (OPTIONAL)
# ========================================
# Retry settings for failed database operations

# Number of connection retry attempts
DB_CONNECTION_RETRIES=3

# Number of query retry attempts
DB_QUERY_RETRIES=2

# ========================================
# DATABASE SECURITY CONFIGURATION (OPTIONAL)
# ========================================
# Security settings following Dutch banking standards

# Maximum input length for database operations (prevent DoS attacks)
DB_MAX_INPUT_LENGTH=1000

# Enable input validation (set to 'false' to disable - NOT RECOMMENDED)
DB_ENABLE_INPUT_VALIDATION=true

# Log security events for audit purposes (set to 'false' to disable - NOT RECOMMENDED)
DB_LOG_SECURITY_EVENTS=true

# ========================================
# SUPABASE CLIENT TIMEOUTS (OPTIONAL)
# ========================================
# Timeout settings for Supabase client operations

# Realtime connection timeout
SUPABASE_REALTIME_TIMEOUT=20000

# Authentication operation timeout
SUPABASE_AUTH_TIMEOUT=30000

# Connection retry attempts
SUPABASE_CONNECTION_RETRIES=3

# ========================================
# SITE CONFIGURATION (REQUIRED)
# ========================================
# Site-specific configuration

# Site URL for production
NEXT_PUBLIC_SITE_URL=https://tuinbeheer-systeem.vercel.app

# Protected admin email (for special access)
NEXT_PUBLIC_PROTECTED_ADMIN_EMAIL=admin@tuinbeheer.nl

# ========================================
# LOGGING CONFIGURATION (OPTIONAL)
# ========================================
# Logging levels and configuration

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ========================================
# DEVELOPMENT CONFIGURATION (OPTIONAL)
# ========================================
# Development-specific settings

# Node environment
NODE_ENV=development

# ========================================
# SECURITY NOTES
# ========================================
# 
# 1. NEVER commit .env.local to version control
# 2. Use Vercel Secrets for production environment variables
# 3. All timeout values should be reasonable for your database performance
# 4. Security settings should never be disabled in production
# 5. Regularly review and update timeout values based on performance metrics
# 6. Monitor audit logs for security violations
# 7. Follow Dutch banking standards for all security configurations
#
# ========================================
